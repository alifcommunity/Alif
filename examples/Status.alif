	دالة __تهيئة__(هذا, عمر):
		هذا.العمر = عمر

صنف انسان2:
	دالة __تهيئة__(هذا, وزن):
		هذا.الوزن = وزن

صنف شخص(انسان, انسان2):
	دالة __تهيئة__(هذا, عمر, طول, وزن):
		انسان.__تهيئة__(هذا, عمر)
		انسان2.__تهيئة__(هذا, وزن)
		هذا.الطول = طول

	دالة __استدعاء__(هذا, سرعة):
		هذا.السرعة = سرعة

	دالة __عرض__(هذا):
		ارجع م"العمر: {هذا.العمر}, الوزن: {هذا.الوزن}, الطول: {هذا.الطول}, السرعة: {هذا.السرعة}"

